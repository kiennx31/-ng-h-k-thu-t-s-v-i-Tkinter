import tkinter as tk
from tkinter import colorchooser

def choose_color():
    color = colorchooser.askcolor()[1]  # Tr·∫£ v·ªÅ m√£ m√†u hex
    if color:
        root.config(bg=color)
        label.config(text=f"üåà M√†u b·∫°n ch·ªçn: {color}", bg=color)

root = tk.Tk()
root.title("üé® B·ªô ch·ªçn m√†u n·ªÅn")
root.geometry("400x200")

label = tk.Label(root, text="Nh·∫•n n√∫t ƒë·ªÉ ch·ªçn m√†u n·ªÅn", font=("Arial", 16))
label.pack(pady=30)

btn = tk.Button(root, text="üñåÔ∏è Ch·ªçn m√†u", command=choose_color, font=("Arial", 14))
btn.pack()

root.mainloop()
